<script type="text/javascript" id='yw-src'>
function youreWelcome() {
  // Anatomy of a "you're welcome":
  // a phrase, a punctuation mark, a space, an emoji.
  return phrase() + punc() + " " + emoji();
}

function phrase() {
  return pickOne([
    "You're welcome",
    "No problem",
    "No prob",
    "np",
    "Sure thing",
    "Anytime, sweetie",
    "Anytime",
    "Anything for you",
    "De nada, amigo",
    "Don't worry about it"
  ]);
}

function punc() {
  // Add an empty string, so we don't always have punctuation:
  return pickOne(["", "!", ".", "!!"]);
}

function emoji() {
  return pickOne([
    // Add a few empty strings to the options, so we don't overuse emoji:
    "", "", "",
    "😄", "👍", "👌", "👊", "😃", "❤️", "💗", "✨", "🌟", "⭐️", "😏", "😁",
    "😸", "🌻", "🐯", "🌮", "🌷", "🐾", "🌺", "🌸"]);
}

// Pick one of a set of options at random:
function pickOne(array) {
  let i = Math.floor(Math.random() * array.length);
  return array[i];
}
</script>

